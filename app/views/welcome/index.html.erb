<body class="welcome container">
  <div class="home-notice">
    <p><%= notice %></p>
    <p><%= alert %></p>
  </div>
<h1 class="greeting-header"><%= @greetings.sample %></h1>
<div class="recipe-demo">
  <div class="user-list">
    <% if user_signed_in? %>
    <ul class="coler-me">
      <% @recipes.each do |r| %>
        <div class="recipe-item">
          <p>
            <h4><%= link_to r.name, recipe_path(r) %></h4>
            <p class="description"><%= r.description %></p>
            <div class="time">
              <p><%= r.hours%> hr | <%= r.minutes %> min</p>
            </div>
          </p>
        </div>
      <% end %>
    </ul>
    <% else %>
      <% if !@demos.empty? %>
        <p><% @demo.video %></p>
        <%= link_to 'Edit Site Demo', edit_demo_path(@demo) %> |
        <p><% @demo.description %></p>
      <% end %>
    <% end %>
  </div>
</div>

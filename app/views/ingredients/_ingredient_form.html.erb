<%= form_for [@recipe, @ingredient] do |f| %>

  <div class="error-messages">
    <% if @ingredient.errors.any? %>
      <p><%= pluralize(@ingredient.errors.count, "error(s)") %> prohibited this ingredient from being saved:</p>
      <ul>
        <% @ingredient.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div>
    <%= f.label :volume1 %><br>
    <%= f.select(:volume1, options_for_select(@volume1_collection, selected: @ingredient.volume1)) %>
  </div><br>

  <div>
    <%= f.label :volume2 %><br>
    <%= f.select(:volume2, options_for_select(@volume2_collection, selected: @ingredient.volume2)) %>
  </div><br>

  <div>
    <%= f.label :unit %><br>
    <%= f.select(:unit, options_for_select(@unit_collection, selected: @ingredient.unit)) %>
  </div><br>

  <div>
    <%= f.label :food_item %><br>
    <%= f.text_field :food_item %>
  </div><br>

  <div>
    <%= f.submit '+'%><br><br>
  </div>

<% end %>
